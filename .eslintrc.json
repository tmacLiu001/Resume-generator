{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "curly": "error",
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/prop-types": 0,
        "no-debugger": "off",
        "generator-star-spacing": "off",
        "no-console": "warn",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "warn",
        "no-empty": "warn",
        "radix": "off",
        "no-new": "off",
        "no-use-before-define": "off",
        "prefer-reflect": "off",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "padded-blocks": [
            "error",
            {
                "classes": "always"
            }
        ],
        "max-params": "off",
        "no-var": "error",
        "quotes": [
            "error",
            "double"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "always-multiline",
                "exports": "always-multiline",
                "functions": "ignore"
            }
        ],
        "operator-linebreak": [
            "error",
            "after"
        ],
        "prefer-const": [
            "error",
            {
                "destructuring": "any"
            }
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "array-callback-return": "error",
        "brace-style": [
            "error",
            "1tbs"
        ],
        "spaced-comment": [
            "error",
            "always"
        ],
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "no-trailing-spaces": "error",
        "no-multi-spaces": "error",
        "block-spacing": [
            "error",
            "always"
        ],
        "keyword-spacing": "error",
        "space-infix-ops": "error",
        "func-call-spacing": [
            "error",
            "never"
        ],
        "switch-colon-spacing": "error",
        "template-tag-spacing": "error",
        "semi-spacing": "error",
        "no-lonely-if": "error",
        "no-unneeded-ternary": "error",
        "no-whitespace-before-property": "error",
        "space-before-blocks": "error",
        "space-in-parens": "error",
        "key-spacing": "error",
        "no-multi-str": "error",
        "react/react-in-jsx-scope": "off"
    }
}
